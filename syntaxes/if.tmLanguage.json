{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IF Config File",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#key-function"
		},
		{
			"include": "#function"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
				  "match": "(#).*",
				  "name": "comment.line.number-sign.if",
				  "captures": {
					"1": {
					  "name": "punctuation.definition.comment.if"
					}
				  }
				}
			  ]
		},
		"key-function":{
			"patterns": [{
				"name": "support.function",
				"match": "\\b(interface(?=\\()|gen_require(?=\\()|ifdef(?=\\()|template(?=\\()|optional_policy(?=\\())\\b"
			}]
		},
		"function":{
			"patterns": [{
				"name": "support.variable.if",
				"match": "\\w+(?=\\()"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.if",
				"match": "\\b(type|types|allow|role|attribute|bool|dontaudit|class|roleattribute|attribute_role)\\b"
			},
			{
				"//comment": "Match / or : in words",
				"name": "keyword.other.fc",
				"match": "(?<![\\(\\[\\{\\^])(/|:)"
			},
			{
				"//comment": "Matches $ and a digit when they are alone (can be adjacent to whitespace, commas, and parentheses)",
				"name": "support.class",
				"match": "(?<=\\s|\\()\\$\\d(?=\\s|\\)|\\,)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.if",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.if",
					"match": "\\\\."
				}
			]
		}
		
	},
	"scopeName": "source.if"
}